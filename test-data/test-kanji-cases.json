{
    "description": "Test cases for Japanese keyboard predictive text suggestions (hiragana input → word/phrase completion suggestions)",
    "note": "These test cases simulate how Japanese IME suggests complete words and phrases as you type hiragana characters",
    "test_cases": [
        {
            "category": "Common Greetings - Progressive Suggestions",
            "tests": [
                {
                    "input": "こ",
                    "expected_suggestions": [
                        "この",
                        "これ",
                        "ここ",
                        "子",
                        "小",
                        "こ"
                    ],
                    "note": "Single character shows common words starting with こ"
                },
                {
                    "input": "こん",
                    "expected_suggestions": [
                        "こんにちは",
                        "こんにちわ",
                        "今日",
                        "今",
                        "こんな",
                        "こんばんは",
                        "混雑"
                    ],
                    "note": "Two characters - predictive suggests common greetings and words"
                },
                {
                    "input": "こんに",
                    "expected_suggestions": [
                        "こんにちは",
                        "こんにちわ",
                        "今日",
                        "今日は"
                    ],
                    "note": "More specific - greeting suggestions become primary"
                },
                {
                    "input": "こんにち",
                    "expected_suggestions": [
                        "こんにちは",
                        "今日",
                        "今日は"
                    ],
                    "note": "Even more specific completion suggestions"
                },
                {
                    "input": "こんばん",
                    "expected_suggestions": [
                        "こんばんは",
                        "今晩",
                        "今晩は"
                    ],
                    "note": "Good evening suggestions"
                }
            ]
        },
