    "behavioral_notes": {
        "prediction_timing": "Suggestions appear immediately as each character is typed",
        "suggestion_ordering": "Most frequently used words/phrases appear first, followed by less common alternatives",
        "context_awareness": "IME learns from user history and adjusts suggestions based on frequently typed phrases",
        "kanji_vs_hiragana": "Common words show both kanji and hiragana versions, proper nouns prioritize katakana",
        "phrase_completion": "Longer input (3+ characters) triggers phrase-level suggestions like complete greetings",
        "particle_handling": "Common particles (は, の, を, に, etc.) appear as single-character suggestions",
        "selection_method": "Use number keys (1-9), arrow keys, or click to select from suggestion list",
        "learning_behavior": "IME adapts - if you consistently choose one kanji variant, it will prioritize that in future"
    },
    "common_patterns": {
        "greeting_pattern": "こ → こん → こんに → こんにち → こんにちは (progressive completion)",
        "verb_pattern": "た → たべ → たべる (verb root to full form)",
        "polite_pattern": "お → おは → おはよう → おはようございます (polite forms expand)",
        "kanji_alternatives": "Same reading shows multiple kanji options based on context and frequency"
    }
