        },
        {
            "test_name": "rule_conflict_resolution",
            "description": "When both languages active, use context to determine rules",
            "active_languages": [
                "en",
                "ja"
            ],
            "input": "I love ÂØøÂè∏",
            "expected_behavior": {
                "last_word_language": "ja",
                "apply_rules_for": "en",
                "emoji_frequency": "high",
                "note": "Use rules from language of current input context"
            }
        }
    ],
    "performance_requirements": {
        "rule_application_time_ms": 5,
        "logit_bias_overhead_ms": 2,
        "max_boost_tokens_per_language": 100,
        "max_suppress_tokens_per_language": 100
    }
