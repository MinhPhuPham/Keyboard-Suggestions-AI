    "rule_application_tests": [
        {
            "test_name": "logit_biasing",
            "description": "Test that boost_tokens receive higher scores",
            "language": "en",
            "input": "I'm",
            "expected_behavior": {
                "gonna_score": ">= baseline + 0.5",
                "wanna_score": ">= baseline + 0.5",
                "going_score": "baseline"
            }
        },
        {
            "test_name": "token_suppression",
            "description": "Test that suppress_tokens receive lower scores",
            "language": "en",
            "input": "to",
            "expected_behavior": {
                "whom_score": "<= baseline - 1.0",
                "who_score": "baseline"
            }
        },
        {
            "test_name": "emoji_frequency_high",
            "description": "Test high emoji frequency for English",
            "language": "en",
            "input": "I'm happy",
            "expected_behavior": {
                "emoji_in_top_5": true,
                "emoji_count": ">= 2"
            }
        },
        {
            "test_name": "emoji_frequency_low",
            "description": "Test low emoji frequency for Japanese",
            "language": "ja",
            "input": "Â¨â„Åó„ÅÑ",
            "expected_behavior": {
                "emoji_in_top_5": false,
                "text_suggestions_prioritized": true
            }
        },
        {
            "test_name": "formality_casual",
            "description": "Test casual formality for English",
            "language": "en",
            "input": "want to",
            "expected_behavior": {
                "suggests_contraction": true,
                "wanna_rank": "< want to rank"
            }
        },
        {
            "test_name": "formality_polite",
            "description": "Test polite formality for Japanese",
            "language": "ja",
            "input": "Ë°å„Åè",
