            "test_cases": [
                {
                    "input": "I'm",
                    "should_boost": [
                        "gonna",
                        "wanna"
                    ],
                    "should_suppress": [
                        "whom"
                    ],
                    "context": "Teen slang should be boosted"
                },
                {
                    "input": "that's so",
                    "expected_style": "casual",
                    "should_include": [
                        "cool",
                        "funny",
                        "awesome",
                        "lol"
